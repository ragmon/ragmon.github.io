extends ../layouts/default

mixin competency(competency)
    .competency
        h6= competency.title
        p= competency.description

mixin portfolio(project)
    a(href=project.url).card
        img.card-img-top(src=project.logo, alt=project.logoAlt)
        .card-body
            h5.card-title= project.title
            p.card-text= project.description

mixin skill(skill)
    a.skill(href=skill.url, target="_blank")
        img(src=`@images/skills/${skill.name.toLowerCase()}.svg`, alt=skill.alt || name, title=skill.name)

mixin footerLink(link)
    a(href=link.href, target=link.target)= link.title

mixin renderFooterLinks(footerLinks)
    .col-md-3.footer-column
        each link in footerLinks
            +footerLink(link)
